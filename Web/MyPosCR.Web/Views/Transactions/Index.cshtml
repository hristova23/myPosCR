@model MyPosCR.Web.Models.Transactions.IndexViewModel
@{
    ViewData["Title"] = "Transactions Dashboard";
}

<div class="text-center">
    <h1 class="display-4 p-3">Transactions</h1>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="width: 30%">Sender</th>
                <th scope="col" style="width: 30%">Receiver</th>
                <th scope="col" style="width: 20%">Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr role="button" onclick="location.href = '@(Url.Action("Details", "Transactions", new { id = transaction.TransactionId }))'">
                    <td>@transaction.Sender.Email (@transaction.Sender.PhoneNumber)</td>
                    <td>@transaction.Reciever.Email (@transaction.Reciever.PhoneNumber)</td>
                    <td>@transaction.Amount</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container text-end">
        <input type="button" class="btn-success" value="Create Transaction" onclick="location.href='@Url.Action("Create", "Transactions")'" />
    </div>
</div>